<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background4"
        android:layout_gravity="top"
        android:layout_marginBottom="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:gravity="center_vertical"
                android:paddingBottom="12dp">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="112dp"
                    android:layout_height="94dp"
                    android:contentDescription="Logo"
                    android:src="@drawable/logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="12dp"
                    android:text="LifeLog"
                    android:textColor="#000000"
                    android:textSize="40sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dashboard"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingBottom="12dp"
                android:layout_marginStart="5dp"/>

            <!-- Today & Progress -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="129dp"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="20dp"
                android:layout_marginEnd="4dp"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/todayCard"
                    android:layout_width="16dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/card_bg"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="158dp"
                        android:layout_height="wrap_content"
                        android:text="Today"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="284dp"
                        android:layout_height="69dp"
                        android:paddingTop="1dp"
                        android:text="☑ Complete project report\n☐ Study for exam\n✔
 Reading\nStreak: 3 days"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/screenTime"
                    android:layout_width="16dp"

                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/card_bg"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="152dp"
                        android:layout_height="wrap_content"
                        android:text="Progress Summary"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="378dp"
                        android:layout_height="80dp"
                        android:paddingTop="8dp"
                        android:text="Study tracker\n15 hrs studied this week\n                      see more..."
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Icon Boxes -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="16dp">

                <!-- Box 1 -->

                <!-- Box 2 -->
                <LinearLayout
                    android:id="@+id/booksmovies"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/card_bg"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="63dp"
                        android:layout_height="61dp"
                        android:contentDescription="Books"
                        android:src="@drawable/books" />

                    <TextView
                        android:id="@+id/text"
                        android:layout_width="146dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="Books and movies"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/calendarCard"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/card_bg"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/corner"
                        android:layout_width="63dp"
                        android:layout_height="61dp"
                        android:contentDescription="Calendar"
                        android:src="@drawable/planner" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="Calendar and planner"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Box 3 -->
                <LinearLayout
                    android:id="@+id/location_search"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/card_bg"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="63dp"
                        android:layout_height="61dp"
                        android:contentDescription="Location"
                        android:src="@drawable/location" />

                    <TextView
                        android:layout_width="116dp"
                        android:layout_height="42dp"
                        android:paddingTop="8dp"
                        android:text="Locations"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Box 4 -->
                <LinearLayout
                    android:id="@+id/addAchievement"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/card_bg"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="63dp"
                        android:layout_height="61dp"
                        android:contentDescription="Achievement"
                        android:src="@drawable/achievement" />

                    <TextView
                        android:layout_width="88dp"
                        android:layout_height="44dp"
                        android:paddingTop="8dp"
                        android:text="Add achievement"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </LinearLayout>
            </GridLayout>

            <!-- Weekly Review -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:layout_marginTop="0dp"
                android:background="#A3CDE3"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="27dp"
                    android:contentDescription="Review"
                    android:src="@drawable/smile" />

                <LinearLayout
                    android:layout_width="329dp"
                    android:layout_height="76dp"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <TextView
                        android:layout_width="227dp"
                        android:layout_height="39dp"
                        android:text="                                                    You had a productive week!"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="169dp"
                        android:layout_height="25dp"
                        android:text="Keep up the good work"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar fixed to bottom -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:background="#FDFDFD"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/navLocation"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/goal"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:src="@drawable/ic_goal" />

        <ImageView
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:src="@drawable/ic_location" />

        <ImageView
            android:id="@+id/navScan"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:src="@drawable/ic_planner" />

        <ImageView
            android:id="@+id/navSetting"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:src="@drawable/ic_status" />
    </LinearLayout>

</FrameLayout>
