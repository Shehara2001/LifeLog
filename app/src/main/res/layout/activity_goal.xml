<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E3F2FD">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/header_background"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Goals"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center"
            android:background="@drawable/title_background"
            android:padding="12dp" />

        <!-- Tab Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btn_academic"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Academic"
                android:textColor="@color/white"
                android:background="@drawable/tab_unselected"
                android:layout_marginEnd="8dp"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_personal"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Personal"
                android:textColor="#666666"
                android:background="@drawable/tab_unselected"
                android:layout_marginEnd="8dp"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_other"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Other"
                android:textColor="#666666"
                android:background="@drawable/tab_unselected"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>

    <!-- Goals List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/goals_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Example goals removed. Dynamically added goals will appear here. -->

        </LinearLayout>
    </ScrollView>

    <!-- Floating Action Button -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_add_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:src="@drawable/ic_add"
            app:backgroundTint="#FF5722"
            app:tint="@color/white" />

    </FrameLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:background="#FDFDFD"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/navLocation"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/goal"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:src="@drawable/ic_goal" />

        <ImageView
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:src="@drawable/ic_location" />

        <ImageView
            android:id="@+id/navScan"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:src="@drawable/ic_planner" />

        <ImageView
            android:id="@+id/navSetting"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:src="@drawable/ic_status" />
    </LinearLayout>

</LinearLayout>