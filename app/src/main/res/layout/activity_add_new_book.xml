<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background8"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Header -->
            <TextView
                android:layout_width="357dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="32dp"
                android:text="Add New Book"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="28sp"
                android:textStyle="bold" />

            <!-- Book Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book Title"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etBookTitle"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Enter book title"
                android:background="@drawable/edittext_background"
                android:paddingHorizontal="16dp"
                android:textSize="16sp"
                android:layout_marginBottom="20dp" />

            <!-- Author -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Author"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etAuthor"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Author name"
                android:background="@drawable/edittext_background"
                android:paddingHorizontal="16dp"
                android:textSize="16sp"
                android:layout_marginBottom="20dp" />

            <!-- Genre -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Genre"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/spinnerGenre"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/edittext_background"
                android:layout_marginBottom="20dp" />

            <!-- Total Pages -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Pages"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etTotalPages"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="ex: 150"
                android:background="@drawable/edittext_background"
                android:paddingHorizontal="16dp"
                android:textSize="16sp"
                android:inputType="number"
                android:layout_marginBottom="20dp" />

            <!-- Status -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/spinnerStatus"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/edittext_background"
                android:layout_marginBottom="20dp" />

            <!-- Priority -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Priority"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="32dp">

                <Button
                    android:id="@+id/btnHighPriority"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="#DEBEBE"

                    android:text="High"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/btnMediumPriority"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="#DEBEBE"
                    android:text="Medium"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black" />

                <Button
                    android:id="@+id/btnLowPriority"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="#DEBEBE"

                    android:text="Low"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <!-- Upload Book Cover -->
            <LinearLayout
                android:id="@+id/layoutUploadCover"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/upload_background"
                android:layout_marginBottom="32dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/ivBookCover"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_upload"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tvUploadText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Book Cover"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

            <!-- Add Book Button -->
            <Button
                android:id="@+id/btnAddBook"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="50dp"
                android:backgroundTint="#765C5C"
                android:text="Add Book"
                android:textAllCaps="false"
                android:textColor="@android:color/white"

                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FDFDFD"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/navLocation"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/goal"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:src="@drawable/ic_goal" />

        <ImageView
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:src="@drawable/ic_location" />

        <ImageView
            android:id="@+id/navScan"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:src="@drawable/ic_planner" />

        <ImageView
            android:id="@+id/navSetting"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:src="@drawable/ic_status" />
    </LinearLayout>

</LinearLayout>
